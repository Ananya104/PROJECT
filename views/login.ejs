<title><%= titlePage %></title>
<% include partials/header.ejs %>
<link rel="stylesheet" href="/css/login.css">
<script src="/js/javascript.js"></script>
<link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
<div class="login-background">
    <div class="container">
        <%- messages('partials/message', locals) %>
        <form method="post" action="/login">
            <div class="card login-card">
                <img class="card-img-top" src="/images/19.jpg" alt="image">
                <div class="centered"><h3 class="login-heading">Login</h3></div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="username-input">Username</label>
                        <input type="text" placeholder="Enter your username" name="username" class="username-input">
                    </div>
                    <div class="form-group">
                        <label for="password-input">Password</label>
                        <input type="password" placeholder = "Enter your password" id="showpasswordClick" name="password" class="password-input">
                    </div>
                </div>
                <div class="login-button text-center">
                    <button type="submit">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>
<% include partials/footer.ejs %>
